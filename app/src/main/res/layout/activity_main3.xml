<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3399FF"
        android:id="@+id/lin_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="Configure Favorite Channels"
                android:textSize="26dp"
                android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TableRow>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="Favorite Channel Button"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/rad_sec"
                    android:orientation="horizontal"
                    android:layout_column="2">
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/rad_left"
                        android:text="Left"/>
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/rad_mid"
                        android:text="Middle"/>
                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/rad_right"
                        android:text="Right" />
                </RadioGroup>


            </TableRow>

            <TableRow>
                <TextView
                    android:text="Label"
                    android:gravity="left"
                    android:textSize="16dp"/>
                <EditText
                    android:layout_span="6"
                    android:id="@+id/editconf"
                    android:maxLength="4" />


            </TableRow>

            <TableRow>
                <TextView
                    android:text="Channel"
                    android:gravity="left"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/show_result"
                    android:hint="0"
                    android:layout_span="6"
                    android:layout_gravity="center"
                    android:maxLength="999" />
            </TableRow>

            <TableRow
                android:id="@+id/buttons">
                <TextView
                    android:text=""
                    android:gravity="left"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:onClick="btn0Clicked"/>
                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:onClick="btn1Clicked"/>
                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:onClick="btn2Clicked"
                    android:layout_column="4" />
            </TableRow>
            <TableRow
                android:id="@+id/buttons2">

                <TextView
                    android:text=""
                    android:gravity="left"
                    android:textSize="16dp"/>
                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="btn3Clicked"/>
                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:onClick="btn4Clicked"/>
                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="btn5Clicked"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:id="@+id/buttons3">

                <TextView
                    android:text=""
                    android:gravity="left"
                    android:textSize="16dp"/>
                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:onClick="btn6Clicked"/>
                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:onClick="btn7Clicked"/>
                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="btn8Clicked"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:id="@+id/buttons4">

                <TextView
                    android:text=""
                    android:gravity="left"
                    android:textSize="16dp"/>
                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:onClick="btn9Clicked"/>
                <Button
                    android:id="@+id/btn_chm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="CH-"/>
                <Button
                    android:id="@+id/btn_chp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="CH+"
                    android:layout_column="4" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/buttons5">


                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:layout_column="2" />

                <Button
                    android:id="@+id/btn_save"
                    android:text="Save" />

            </TableRow>
        </TableLayout>


    </RelativeLayout>


</LinearLayout>
